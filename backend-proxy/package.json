{
  "name": "backend-proxy",
  "version": "1.0.0",
  "description": "Proxy server to the main backend service for non-browser clients.",
  "main": "index.js",
  "author": "Ekku Sipil√§ <ekku.eki@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "yarn kill && cross-env NODE_ENV=development ts-node-dev --exit-child --respawn --transpile-only index.ts",
    "kill": "bash ./scripts/kill-process.sh",
    "start": "APP_VERSION=$npm_package_version node lib/index.js",
    "build": "tsc -p tsconfig.prod.json"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "http-proxy-middleware": "^2.0.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.16",
    "cross-env": "^7.0.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
