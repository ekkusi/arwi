{
  "ts-node": {
    "files": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "files": [
    "src/global.d.ts"
  ],
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,            /* Ensure that casing is correct in imports. */
    "isolatedModules": true,
    "incremental": true,
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "lib",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "esnext",
    "esModuleInterop": true,
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.ts", "src/__mocks__", "lib"]
}
